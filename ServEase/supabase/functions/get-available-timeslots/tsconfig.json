{
  "compilerOptions": {
    // These are the three most important settings for Deno
    "lib": ["deno.ns", "dom"],
    "module": "esnext",
    "target": "esnext",

    // Standard recommended settings
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  // This tells VS Code not to look at files outside this directory
  "include": ["**/*.ts"] 
}